<%= render 'header' %>

<div class="panel panel-primary" id="devise_panel">
  <div class="panel-heading">
    <h4>Sign Up</h4>
  </div>

  <div class="panel-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :name %>
          <br/>
          <%= f.text_field :username, autofocus: true, class: "devise_text_field" %>
        </div>
        <br/><br/>

        <div class="field">
          <%= f.label :email %>
          <br/>
          <%= f.email_field :email, class: "devise_text_field" %>
        </div>
        <br/><br/>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <br/>
          <%= f.password_field :password, autocomplete: "off", class: "devise_text_field" %>
        </div>
        <br/><br/>

        <div class="field">
          <%= f.label :password_confirmation %>
          <br/>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "devise_text_field" %>
        </div>
        <br/><br/>

        <div class="actions">
          <%= f.submit "Sign up", class: "devise_btn" %>
        </div>
        <br/><br/>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

<%= render 'footer' %>
