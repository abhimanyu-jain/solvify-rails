<body class="devise_forms">

<%= render 'generic_orders/header' %>

<div class="panel panel-primary" id="devise_panel">
  <div class="panel-heading">
    <h4>Log in</h4>
  </div>

  <div class="panel-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :username, class: "devise_text"%>
          <br/>
          <%= f.text_field :username, autofocus: true, class: "devise_text_field" %>
        </div>
        <br/><br/>
        <div class="field">
          <%= f.label :password %>
          <br/>
          <%= f.password_field :password, autocomplete: "off", class: "devise_text_field"%>
        </div>
        <br/>
        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>
        <br/>
        <div class="actions">
          <%= f.submit "Log in", class: "devise_btn" %>
        </div>
        <br/><br/>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<%= render 'generic_orders/footer' %>

</body>